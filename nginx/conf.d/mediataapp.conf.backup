# CONFIGURAÇÃO TEMPORÁRIA - APENAS HTTP (para obter certificado SSL)
server {
    listen 80;
    server_name mediatanordeste.com.br www.mediatanordeste.com.br;

    # ✅ ESSENCIAL para o Certbot funcionar
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
        try_files $uri =404;
    }

    # ✅ Seu aplicativo Django (sem SSL por enquanto)
    location / {
        proxy_pass http://mediataapp:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # ✅ Arquivos estáticos
    location /static/ {
        alias /data/web/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # ✅ Arquivos de mídia
    location /media/ {
        alias /data/web/media/;
        expires 6M;
        add_header Cache-Control "public";
    }

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
}
